{% extends 'layout.twig' %}

{% block content %}
    <h2>Lista de todas las sub areas</h2>
    <a href="{{ 'admin/' | url }}">Atras</a>
    <br><br>
    <a href="{{ 'admin/subarea/create' | url }}">Insertar sub area</a>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">boton</th>
            </tr>
        </thead>
        <tbody>
            {% for subarea in subareas %}
                <tr>
                    <td>{{ subarea.nomb_subarea }}</td>
                    <td>{{ subarea.desc_subarea }}</td>
                    <td><a href="{{ 'admin/' | url }}">boton</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}


