{% extends 'layout.twig' %}

{% block content %}
    <h2>Lista de todos los docentes</h2>
    <a href="{{ 'admin' | url }}">Atras</a>
    <br><br>
    <a href="{{ 'admin/teachers/create' | url }}">Insertar docente</a><br>
    <a href="{{ 'admin/teachers/import' | url }}">Importar docentes desde archivo</a><br>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre Docente</th>
                <th scope="col">Correo Electronico</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Dirección</th>
                <th scope="col">Carga Horaria</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for docente in docentes %}
                <tr>
                    <td>{{ docente.full_name }}</td>
                    <td>{{ docente.email }}</td>
                    <td>{{ docente.phone }}</td>
                    <td>{{ docente.address }}</td>
                    <td>{{ docente.name_wl }}</td>
                    <td><a href="{{ 'admin/' | url }}">Ver Perfil</a></td>
                    <td><a href="{{ 'admin/' | url }}">Inhabilitar<br>Docente</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}